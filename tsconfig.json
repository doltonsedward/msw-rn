{
    "extends": "expo/tsconfig.base",
    "display": "Expo",
    "compilerOptions": {
      "allowJs": true,
      "esModuleInterop": true,
      "jsx": "react-jsx",
      "lib": [
        "DOM",
        "ESNext"
      ],
      "moduleResolution": "node",
      "noEmit": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "module": "esnext",
      "target": "ESNext",
      "baseUrl": ".",
      "types": ["jest", "@testing-library/jest-native"],
      "typeRoots": ["./src/types", "./node_modules/@types"]
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ]
  }